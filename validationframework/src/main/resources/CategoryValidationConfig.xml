<?xml version="1.0" encoding="UTF-8"?>
<Validations>
	<validation>
		<name>Category</name>
		<fields>
			<field>
				<name>Name</name>
				<type>String</type>
				<validates>
					<validate>com.onlinemarketplace.validation.validator.NullValidator</validate>
					<validate>com.onlinemarketplace.validation.validator.NotANumber</validate>
				</validates>
			</field>			
		</fields>
	</validation>
	
	<validation>
		<name>SubCategory</name>
		<fields>
			<field>
				<name>Name</name>
				<type>String</type>
				<validates>
					<validate>com.onlinemarketplace.validation.validator.NullValidator</validate>
					<validate>com.onlinemarketplace.validation.validator.NotANumber</validate>
				</validates>
			</field>			
		</fields>
	</validation>
	
	<validation>
		<name>Product</name>
		<fields>
			<field>
				<name>productCode</name>
				<type>String</type>
				<validates>
					<validate>com.onlinemarketplace.validation.validator.NullValidator</validate>
					<validate>com.onlinemarketplace.validation.validator.NotANumber</validate>
					<validate>com.onlinemarketplace.validation.validator.UniqueProductCodeValidator</validate>
				</validates>
			</field>
			
			<field>
				<name>Category</name>
				<type>CategoryDto</type>
				<validates>
					<validate>com.onlinemarketplace.validation.validator.NullValidator</validate>
					<validate>com.onlinemarketplace.validation.validator.NotANumber</validate>
					<validate>com.onlinemarketplace.validation.validator.UniqueProductCodeValidator</validate>
				</validates>
			</field>			
		</fields>
	</validation>
</Validations>